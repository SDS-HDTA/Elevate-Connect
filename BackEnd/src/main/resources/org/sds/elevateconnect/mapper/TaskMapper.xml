<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.sds.elevateconnect.mapper.TaskMapper">

    <resultMap id="TaskResultMap" type="org.sds.elevateconnect.model.project.Task">
        <id property="id" column="id"/>
        <result property="taskId" column="task_id"/>
        <result property="projectId" column="project_id"/>
        <result property="iterationId" column="iteration_id"/>
        <result property="code" column="code"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="projectStatus" column="project_status"/>
        <result property="creatorId" column="creator_id"/>
        <result property="assigneeId" column="assignee_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    
    <insert id="insertTask" parameterType="org.sds.elevateconnect.model.project.Task" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tasks (task_id, project_id, iteration_id, code, content, status, project_status,
                           creator_id, assignee_id)
        VALUES (#{taskId}, #{projectId}, #{iterationId}, #{code}, #{content}, #{status}, #{projectStatus},
                #{creatorId}, #{assigneeId})
    </insert>

    <select id="getTasksByIterationId" resultMap="TaskResultMap">
        SELECT *
        FROM tasks
        WHERE iteration_id = #{iterationId}
        ORDER BY create_time
    </select>

    <update id="updateTask" parameterType="org.sds.elevateconnect.model.project.Task">
        UPDATE tasks
        <set>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="assigneeId != null">
                assignee_id = #{assigneeId},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="getTaskById" parameterType="int" resultMap="TaskResultMap">
        SELECT *
        FROM tasks
        WHERE id = #{id}
    </select>
    <select id="getMainTasksByIterationId" resultMap="TaskResultMap">
        SELECT *
        FROM tasks WHERE iteration_id = #{iterationId} AND task_id = 0 ORDER BY create_time
    </select>
    <select id="getSubTasksByTaskId" resultMap="TaskResultMap">
        SELECT * FROM tasks WHERE task_id = #{taskId} ORDER BY create_time
    </select>
    <select id="getCountByCode" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tasks WHERE code LIKE CONCAT(#{code}, '%')
    </select>

    <delete id="deleteTask" parameterType="int">
        DELETE FROM tasks
        WHERE id = #{id}
    </delete>

</mapper>
